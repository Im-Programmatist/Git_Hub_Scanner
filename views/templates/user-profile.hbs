{{>header}}
{{>navbar}}
{{>flash}}
	<div id="fh5co-consult">
		<div class="choose animate-box">
			<h2>Get Git Profile </h2>
			<form action="/fetch-user-profile" method="post">
				<div class="row form-group">
					<div class="col-md-12">
						<input type="text" name="username" id="username" class="form-control" placeholder="enter your git user name">
					</div>
				</div>
				<div class="row form-group">
					<div class="col-md-12">
						<input type="text" name="accesstoken" id="accesstoken" class="form-control" placeholder="enter your git access token">
					</div>
				</div>
				<div class="form-group">
					<input type="submit" value="Send Message" class="btn btn-primary">
				</div>
			</form>	
		</div>
	</div>
	<div id="fh5co-about" class="animate-box">
		<div class="container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
					<h2> My Git Profile </h2>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<ul class="info">
						<li><span class="first-block">Full Name:</span><span class="second-block">{{gitHubProfile.name}}</span></li>
						<li><span class="first-block">Avatar Url:</span><span class="second-block">{{gitHubProfile.avatar_url}}</span></li>
						<li><span class="first-block">Git hub Url :</span><span class="second-block">{{gitHubProfile.html_url}}</span></li>
						<li><span class="first-block">Location :</span><span class="second-block">{{gitHubProfile.location}}</span></li>
						<li><span class="first-block">No. Of Public Repos :</span><span class="second-block">{{gitHubProfile.public_repos}}</span></li>
						<li><span class="first-block">Follower :</span><span class="second-block">{{gitHubProfile.following}}</span></li>
						<li><span class="first-block">Bio:</span><span class="second-block">{{gitHubProfile.bio}}</span></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
{{>footer}}